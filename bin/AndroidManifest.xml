<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tucker.shidel.greenscreenphotography"
    android:versionCode="1"
    android:versionName="1" >

    <uses-sdk 
        android:minSdkVersion="8" 
        android:targetSdkVersion="17" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
			
            android:name="andrew.green.MainActivity" >
          
        </activity>
		<activity
            android:label="@string/app_name"
			android:screenOrientation="portrait" 
            android:name="andrew.green.Index" >
           
        </activity>
		
		<activity
            android:label="@string/app_name"
		
            android:name="andrew.green.done" >

        </activity>
		
		<activity
            android:label="@string/app_name"
	
            android:name="andrew.green.GetBackground" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	
		<activity 
			android:name="andrew.green.PictureTaker"
	        android:configChanges="orientation|keyboardHidden" 
			android:label="Picture Taker">
			</activity>
		
		<activity android:name="andrew.green.Pic1View" 
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
			android:configChanges="orientation|keyboardHidden" 
			android:label="Select invisible color">
		</activity>
		
		<activity android:name="andrew.green.Settings" 
			android:screenOrientation="portrait" 
			android:label="Settings">
		</activity>
		
		<activity android:name="andrew.green.Resize" 
            android:configChanges="orientation|keyboardHidden" 
			android:label="Resize">
		</activity>
		
		<activity android:name="andrew.green.FileDialog" 
			
			android:label="Pick a file">
		</activity>
		<activity android:name="andrew.green.VideoCapture" 
			android:screenOrientation="portrait" 
			android:label="Capturing Video">
		</activity>
    </application>
	<uses-permission 
		android:name="android.permission.WRITE_EXTERNAL_STORAGE">
	</uses-permission>
	<uses-permission 
		android:name="android.permission.SET_WALLPAPER" >
</uses-permission>
	<uses-permission 
		android:name="android.permission.RECORD_AUDIO">
	</uses-permission>
	
	<uses-feature android:name="android.hardware.camera.autofocus" />
	
	<uses-permission android:name="android.permission.CAMERA">
	</uses-permission>
</manifest>
